<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="#000000">

    <!-- FONDO -->
    <ImageView
        android:id="@+id/imgMenuBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/menu_bg"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- OVERLAY (más suave y bonito) -->
    <View
        android:id="@+id/overlayMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#7A000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SAFE SPACE ARRIBA -->
    <View
        android:id="@+id/topSafeSpaceMenu"
        android:layout_width="0dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CONTENEDOR "GLASS" -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMenuContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#EEFFFFFF"
        app:layout_constraintTop_toBottomOf="@id/topSafeSpaceMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp">

            <TextView
                android:id="@+id/txtMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Menú principal"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1E1E1E"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txtSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Elige una opción para continuar"
                android:textSize="14sp"
                android:textColor="#6B6B6B"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/txtMenu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- PRODUCTOS -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProductos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#1A000000"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/txtSub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <ImageView
                        android:id="@+id/icProductos"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/ic_productos"
                        android:contentDescription="Productos"
                        app:tint="#5E35B1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/txtProductos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ver productos"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E1E1E"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/icProductos"
                        app:layout_constraintEnd_toStartOf="@id/arrowProductos"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/arrowProductos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="›"
                        android:textSize="26sp"
                        android:textColor="#9E9E9E"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- CARRITO -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCarrito"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#1A000000"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/cardProductos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <ImageView
                        android:id="@+id/icCarrito"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/ic_carrito"
                        android:contentDescription="Carrito"
                        app:tint="#5E35B1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/txtCarrito"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ver carrito"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E1E1E"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/icCarrito"
                        app:layout_constraintEnd_toStartOf="@id/arrowCarrito"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/arrowCarrito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="›"
                        android:textSize="26sp"
                        android:textColor="#9E9E9E"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
