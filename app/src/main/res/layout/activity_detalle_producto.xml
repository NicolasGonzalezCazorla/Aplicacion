<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F2FF"
    android:padding="16dp">

    <!-- Espacio seguro arriba (cámara/status bar) -->
    <View
        android:id="@+id/topSafeSpaceDetalle"
        android:layout_width="0dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón volver pequeño arriba (forzado visible) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/volver"
        android:textAllCaps="false"
        android:textColor="#5E35B1"
        app:backgroundTint="@android:color/white"
        app:strokeColor="#5E35B1"
        app:strokeWidth="2dp"
        app:cornerRadius="14dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/topSafeSpaceDetalle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Card imagen -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImagenDetalle"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/btnVolver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgDetalleProducto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            android:importantForAccessibility="no"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card info producto -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardInfoDetalle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/cardImagenDetalle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Nombre -->
            <TextView
                android:id="@+id/txtNombreDetalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/nombre_producto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1E1E1E"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Precio -->
            <TextView
                android:id="@+id/txtPrecioDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="69,99 €"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#5E35B1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/txtNombreDetalle"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Categoría chip -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="999dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#115E35B1"
                app:layout_constraintTop_toBottomOf="@id/txtNombreDetalle"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/txtCategoriaDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#5E35B1"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Selector cantidad en “pill” -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="999dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#22000000"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/txtPrecioDetalle"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="6dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMenos"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:text=""
                        app:icon="@drawable/ic_remove_24"
                        app:iconTint="@android:color/white"
                        app:iconSize="18dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        app:backgroundTint="#5E35B1"
                        app:cornerRadius="20dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"/>




                    <TextView
                        android:id="@+id/txtCantidad"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E1E1E"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                    <!-- MAS (relleno morado, texto blanco) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMas"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:text=""
                        app:icon="@drawable/ic_add_24"
                        app:iconTint="@android:color/white"
                        app:iconSize="18dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        app:backgroundTint="#5E35B1"
                        app:cornerRadius="20dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"/>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón añadir ancho completo (morado + texto blanco) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAgregarCarrito"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Añadir al carrito (x1)"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="#5E35B1"
                android:layout_marginTop="14dp"
                app:cornerRadius="18dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:layout_constraintTop_toBottomOf="@id/cardCantidad"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
