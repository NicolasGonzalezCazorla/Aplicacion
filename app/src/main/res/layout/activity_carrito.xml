<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F2FF"
    android:padding="16dp">

    <!-- SAFE SPACE ARRIBA (status bar / notch) -->
    <View
        android:id="@+id/topSafeSpaceCarrito"
        android:layout_width="0dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- HEADER -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeaderCarrito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/topSafeSpaceCarrito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVolverCarrito"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Volver"
                android:textAllCaps="false"
                android:textColor="#5E35B1"
                app:backgroundTint="@android:color/white"
                app:strokeColor="#5E35B1"
                app:strokeWidth="2dp"
                app:cornerRadius="14dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txtTituloCarrito"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Carrito"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1E1E1E"
                android:textAlignment="center"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/btnVolverCarrito"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- LISTA EN CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardListaCarrito"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/cardHeaderCarrito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardBottomBar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCarrito"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="12dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- BARRA INFERIOR (TOTAL + PAGAR) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <TextView
                android:id="@+id/txtResumenPago"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total: 0,00 â‚¬"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E1E1E"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnPagar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPagar"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Pagar"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="#5E35B1"
                app:cornerRadius="16dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
